# .env.example
# for unit tests

#  === POSTHOG API  === #

# Project API key (used for sending events via /capture)
POSTHOG_API_KEY=your_project_api_key_here

# Personal API key (used for GET/admin actions)
POSTHOG_PERSONAL_API_KEY=your_personal_api_key_here

# Host for PostHog (usually https://app.posthog.com for cloud)
POSTHOG_HOST=https://app.posthog.com

# Numeric project ID
POSTHOG_PROJECT_ID=12345

# Custom event name to track
POSTHOG_FILTER_EVENT=test_event

# ID to identify the user/session
POSTHOG_DISTINCT_ID=user_001

# Action type to describe the event
POSTHOG_ACTION=manual_api_test

# Page or path info associated with the event
POSTHOG_PAGE=/demo

#  === CSV output  === #
CSV_PATH=./output/sample_events.csv

#  === PDF output  === #
PDF_PATH=./output/report.pdf

#  === Font === #
FONT_PATH=./fonts/NotoSansJP-Regular.ttf
FONT_NAME=NotoSans


# === Email Settings ===

# Sender Gmail address (must have App Password enabled if using 2FA)
EMAIL_ADDRESS=from_address@gmail.com

# App Password for the sender Gmail account (not the regular password)
EMAIL_PASSWORD=your_app_password

# Recipient email address
TO_ADDRESS=to_address@gmail.com

# SMTP server settings for Gmail
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465

# === Email Content ===

# Subject line for the email
EMAIL_SUBJECT=Your PDF Report

# Body text of the email
EMAIL_BODY=Please find the attached PDF report.
